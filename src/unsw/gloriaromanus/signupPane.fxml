<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Background?>
<?import javafx.scene.layout.BackgroundFill?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>

<VBox alignment="TOP_LEFT" maxWidth="250" spacing="10" styleClass="panel-region" stylesheets="/unsw/gloriaromanus/style.css" StackPane.alignment="TOP_LEFT" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="unsw.gloriaromanus.SignupPaneController">
    <padding>
        <Insets topRightBottomLeft="10" />
    </padding>
    <background>
        <Background>
            <fills>
                <BackgroundFill>
                    <fill>
                        <Color opacity="0.3" />
                    </fill>
                </BackgroundFill>
            </fills>
        </Background>
    </background>
    <HBox>
        <VBox>
            <Label text="user name" />
            <TextField fx:id="user_name" editable="true" text="" />
        </VBox>
        <VBox>
            <Label text="faction" />
            <TextField fx:id="user_faction" editable="true" text="" />
        </VBox>
    </HBox>
    <Button onAction="#clickedRegisterButton" text="register" />
     <!-- onAction="#clickedRegisterButton"/> -->
    <VBox>
        <Label text="Output from interactions" />
        <TextArea fx:id="output_terminal" editable="false" text="" />
    </VBox>
    <Button onAction="#clickedStartGame" text="Start Game" />
</VBox>
